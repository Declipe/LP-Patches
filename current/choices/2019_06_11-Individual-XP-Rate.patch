+//Individuale_XP-Rate
+void Player::SetIndividualRate(IndividualXpRate rate, float value)
+{
+    if (value < 1 || value > 8)
+        return;
+
+    switch (rate)
+    {
+        case INDIVIDUAL_XP_KILL:
+            _individual_kill = value;
+            break;
+        case INDIVIDUAL_XP_QUEST:
+            _individual_quest = value;
+        break;
+        default:
